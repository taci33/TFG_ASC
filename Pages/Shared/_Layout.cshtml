    <header>
        <h1>CURRATELO!!</h1>
        <nav>
            <ul>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/Index"><h4>Inicio</h4></a></li>
                @if (SignInManager.IsSignedIn(User)){
                <li><a class="nav-link text-dark" asp-area="" asp-page="/perfiles"><h4>Buscar Trabajadores</h4></a></li>
                   
                     <li><a class="nav-link text-dark" asp-area="" asp-page="/Crearperfil"><h4>Añadir trabajador</h4></a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/logout"><h4>Logout</h4></a></li>
                }
                 @if (!SignInManager.IsSignedIn(User)){
                <li><a class="nav-link text-dark" asp-area="" asp-page="/registrar"><h4>Registrarse</h4></a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/logear"><h4>Iniciar Sesión</h4></a></li>
                   
                }
            </ul>
        </nav>
    </header>
    
    <div class="sidebar">
